# Basketball Analytics Platform - Environment Configuration
# Copy this file to .env and customize as needed.
# All values shown are defaults.

# =============================================================================
# APPLICATION
# =============================================================================

# Display name for the application
PROJECT_NAME="Basketball Analytics"

# Enable debug mode for detailed logging and error messages
# Set to true in development, false in production
DEBUG=false

# =============================================================================
# DATABASE
# =============================================================================

# SQLAlchemy database connection string
# SQLite (default): sqlite:///./basketball.db
# PostgreSQL: postgresql://user:password@localhost:5432/basketball
# PostgreSQL async: postgresql+asyncpg://user:password@localhost:5432/basketball
DATABASE_URL="sqlite:///./basketball.db"

# Database URL used for running tests
# Uses in-memory SQLite by default for fast, isolated tests
TEST_DATABASE_URL="sqlite:///:memory:"

# =============================================================================
# API
# =============================================================================

# URL prefix for all API routes
# All endpoints will be mounted under this prefix (e.g., /api/v1/players)
API_PREFIX="/api/v1"
